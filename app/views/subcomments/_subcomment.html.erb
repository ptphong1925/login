<div id="<%= dom_id subcomment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= subcomment.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= subcomment.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Subcommenter:</strong>
    <%= subcomment.subcommenter_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Comment:</strong>
    <%= subcomment.comment_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Likes count:</strong>
    <%= subcomment.likes_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this subcomment", subcomment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this subcomment', edit_subcomment_path(subcomment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
