<div id="<%= dom_id nation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= nation.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this nation", nation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this nation', edit_nation_path(nation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
