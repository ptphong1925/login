<div id="<%= dom_id catalogue %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= catalogue.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Parent:</strong>
    <%= catalogue.parent_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this catalogue", catalogue, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this catalogue', edit_catalogue_path(catalogue), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
