<div id="<%= dom_id friend %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Accepted?:</strong>
    <%= friend.accepted? %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Friender:</strong>
    <%= friend.friender_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Friendable:</strong>
    <%= friend.friendable_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this friend", friend, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this friend', edit_friend_path(friend), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
