<div id="<%= dom_id video %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= video.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= video.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Catalogue:</strong>
    <%= video.catalogue %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= video.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Poster:</strong>
    <%= video.poster_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Likes count:</strong>
    <%= video.likes_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this video", video, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this video', edit_video_path(video), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
