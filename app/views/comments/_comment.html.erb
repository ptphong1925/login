<div id="<%= dom_id comment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= comment.content %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= comment.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Commenter:</strong>
    <%= comment.commenter_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Commentable:</strong>
    <%= comment.commentable_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Likes count:</strong>
    <%= comment.likes_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this comment", comment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this comment', edit_comment_path(comment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
