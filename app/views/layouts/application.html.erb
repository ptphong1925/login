<!DOCTYPE html>
<html>
  <head>
    <title>RailsLogin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <div class="w-full">
        <% if notice.present? %>
          <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
        <% end %>
      </div>
    <% if user_signed_in?%>
      Current user: <%= current_user.username %> || <%= current_user.role.capitalize %>
      <%= button_to 'Signout', signout_path, method: :delete %>
    <% else %>
      <%= link_to 'Signin', signin_path, method: :get %>
      <%= link_to 'Signup', new_user_path, method: :get %>
    <% end %>
    <aside>
      <%= render(AsideComponent.new) %>
    </aside>
    </header>
    <main>
    <%= yield %>
    </main>

  </body>
</html>
