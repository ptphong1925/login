<!DOCTYPE html>
<html>
  <head>
    <title>RailsLogin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= notice %>
    <br>
    <% if user_signed_in?%>
      Current user: <%= current_user.username %> || <%= current_user.role.capitalize %>
      <%= button_to 'Signout', signout_path, method: :delete %>
    <% else %>
      <%= link_to 'Signin', signin_path, method: :get %>
      <%= link_to 'Signup', new_user_path, method: :get %>
    <% end %>
    <%= yield %>

  </body>
</html>
